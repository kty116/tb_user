<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--shoppingMall; //쇼핑몰 url-->
                <!--private String orderNumber; //주문번호-->
                <!--private String buyer; //구매자-->
                <!--private String category; //품목 카테고리-->
                <!--private String trackingNumber; //트래킹번호-->
                <!--private boolean isTrackingNumberNotEntered; //트래킹번호 나중에 입력 체크박스-->
                <!--private String price; //금액-->
                <!--private String quantity; //수량-->
                <!--private String color; //색상-->
                <!--private String size; //사이즈-->
                <!--private String goodsUrl; //상품 url-->
                <!--private String imageUrl; //이미지 url-->
                <!--private String bringImage; //핸드폰 이미지 등록-->

                <EditText
                    android:id="@+id/shopping_mall_edit"
                    style="@style/medium_list_text_style"
                    android:layout_height="match_parent"
                    android:background="@color/lightGray"
                    android:text="쇼핑몰" />

                <EditText
                    android:id="@+id/order_number_edit"
                    style="@style/medium_list_text_style"
                    android:layout_height="match_parent"
                    android:background="@color/lightGray"
                    android:text="주문번호" />

                <EditText
                    android:id="@+id/buyer_edit"
                    style="@style/medium_list_text_style"
                    android:layout_height="match_parent"
                    android:background="@color/lightGray"
                    android:text="구매자" />

                <EditText
                    android:id="@+id/category_edit"
                    style="@style/medium_list_text_style"
                    android:layout_height="match_parent"
                    android:background="@color/lightGray"
                    android:text="품목" />

                <EditText
                    android:id="@+id/tracking_number_edit"
                    style="@style/medium_list_text_style"
                    android:layout_height="match_parent"
                    android:background="@color/lightGray"
                    android:text="트래킹번호" />

                <CheckBox
                    android:id="@+id/tracking_number_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나중에 입력" />

                <EditText
                    android:id="@+id/price_edit"
                    style="@style/medium_list_text_style"
                    android:layout_height="match_parent"
                    android:background="@color/lightGray"
                    android:text="금액" />

                <EditText
                    android:id="@+id/quantity_edit"
                    style="@style/medium_list_text_style"
                    android:layout_height="match_parent"
                    android:background="@color/lightGray"
                    android:text="수량" />

                <EditText
                    android:id="@+id/color_edit"
                    style="@style/medium_list_text_style"
                    android:layout_height="match_parent"
                    android:background="@color/lightGray"
                    android:text="색상" />

                <EditText
                    android:id="@+id/size_edit"
                    style="@style/medium_list_text_style"
                    android:layout_height="match_parent"
                    android:background="@color/lightGray"
                    android:text="사이즈" />

                <EditText
                    android:id="@+id/goods_url_edit"
                    style="@style/medium_list_text_style"
                    android:layout_height="match_parent"
                    android:background="@color/lightGray"
                    android:text="상품 url" />

                <EditText
                    android:id="@+id/image_url_edit"
                    style="@style/medium_list_text_style"
                    android:layout_height="match_parent"
                    android:background="@color/lightGray"
                    android:text="이미지 url" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--<TextView-->
                    <!--android:id="@+id/tracking_number_text"-->
                    <!--style="@style/medium_list_text_style"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:gravity="center"-->
                    <!--android:text="트래킹번호"-->
                    <!--app:default_text="트래킹번호" />-->

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <Button
                        android:id="@+id/confirm_button"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="5dp"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:text="촬영등록"
                        android:textColor="@color/gray" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/photo_list_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>

                <!--<com.thebay.tbworkeruse.view.CustomTextView-->
                <!--android:id="@+id/time_received_text"-->
                <!--style="@style/small_list_text_style"-->
                <!--android:text="수취시간"-->
                <!--app:default_text="수취시간" />-->

                <!--<com.thebay.tbworkeruse.view.CustomTextView-->
                <!--android:id="@+id/no_data_registration_text"-->
                <!--style="@style/small_list_text_style"-->
                <!--android:text="노데이타등록"-->
                <!--app:default_text="노데이타등록" />-->


                <LinearLayout
                    android:id="@+id/shooting_state_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/shooting_state_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/default_padding"
                        android:text="촬영상태"
                        android:textSize="@dimen/medium_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_drop_down" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>