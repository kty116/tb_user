<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="noStateBar" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="nav_Style" parent="AppTheme">
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:choiceMode">singleChoice</item>-->
        <!--<item name="android:textSize">15dp</item>-->

        <item name="android:listPreferredItemHeightSmall">40dp</item>
    </style>

    <style name="SearchViewMy" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">@color/transparency</item>
        <item name="queryBackground">@color/transparency</item>
        <item name="android:textSize">@dimen/tiny_text_size</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--<item name="android:textSize">18sp</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CheckBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>

    </style>

    <style name="small_list_text_style" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_marginRight">4dp</item>-->
        <item name="android:background">@null</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="medium_list_text_style" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_marginRight">5dp</item>-->
        <item name="android:padding">4dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="tiny_text_style" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/tiny_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="outbound_scan_list_text_style" parent="@android:style/Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="white_layout_style" parent="AppTheme">
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="spinner_style" parent="AppTheme">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="tab_text_style" parent="AppTheme">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

</resources>
